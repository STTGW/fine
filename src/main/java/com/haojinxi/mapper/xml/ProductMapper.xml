<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.haojinxi.mapper.ProductMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.haojinxi.entity.Product">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="subTitle" property="subtitle" />
        <result column="originalPrice" property="originalprice" />
        <result column="promotePrice" property="promoteprice" />
        <result column="stock" property="stock" />
        <result column="cid" property="cid" />
        <result column="createDate" property="createdate" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, subTitle, originalPrice, promotePrice, stock, cid, createDate
    </sql>

</mapper>
